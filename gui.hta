<html>
<head>
   <title>HTA-TO-EXE - GUI PACKER</title>
   <meta http-equiv="X-UA-Compatible" content="IE=9"/>
   <script language="JavaScript" src="./js/window.js"></script>
   <script language="JavaScript" src="./js/script.js"></script>
   <HTA:APPLICATION 
      BORDER="thin"
      BORDERSTYLE="normal"
      ICON="fav.ico"
      WINDOWSTATE="normal"
      INNERBORDER="no"
      MAXIMIZEBUTTON="no"
      MINIMIZEBUTTON="yes"
      SINGLEINSTANCE="yes"
      RESIZE="no"
      CONTEXTMENU="no"
      SYSMENU="yes"
      SCROLL="no"
      SELECTION="no"
      VERSION="1.0" 
   >
   <link rel="stylesheet" href="./css/style.css">
</head>

<body>
   <div style="padding: 1rem;">
      <div class="title">Application Name</div>
      <input id="nameInput" type="text"></input>
      <div class="title">Package folder</div>
      <input onclick="openFolderPicker();" id="folderInput" type="text" style="cursor: text" readonly></input>
      <button id="build" onclick="buildExecutable();">Build Executable</button>
      <div style="width:100%; text-align: center; display: none; margin-top: 1.5rem;" id="building" >Building...</div>
      <div style="width:100%; text-align: center; display: none; font-size: 12px; margin-top: -.25rem; color: rgb(0,150,0)" id="built" >Building...</div>
   </div>
   <div class="author">By NxRoot</div>
</body>

</html>
